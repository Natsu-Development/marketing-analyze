# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/marketing-analyze

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:3001/api/auth/facebook/callback
FACEBOOK_API_VERSION=v19.0

# Token Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-key-here-32-bytes-total
TOKEN_REFRESH_WINDOW_MINUTES=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# Cron Configuration
# Cron schedule for ad insights export (default: 2 AM daily)
# Format: second minute hour day month weekday
# Examples:
#   "0 2 * * *" - Every day at 2 AM
#   "0 0 * * 0" - Every Sunday at midnight
#   "0 */6 * * *" - Every 6 hours
AD_INSIGHTS_CRON_SCHEDULE=0 2 * * *

